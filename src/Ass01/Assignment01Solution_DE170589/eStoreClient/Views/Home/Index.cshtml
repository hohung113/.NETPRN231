@using BusinessObject.Entity
@model List<Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="text-center">
    <h1 class="display-4">Product List</h1>
</div>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@product.UnitPrice</td>
                </tr>
            }
        </tbody>
    </table>
</div>
